{
  "$schema": "http://json.schemastore.org/swcrc",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "dynamicImport": true,
      "dts": true,
      "tsx": false,
      "decorators": true,
      "importAssertions": true
    },    
    "target": "es2022",
    "loose": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "module": {
    "type": "es6",
    "strict": true,
    "strictMode": true,
    "lazy": false,
    "noInterop": false,
    "resolveFully": true
  },
  "minify": false,
  "isModule": true
}